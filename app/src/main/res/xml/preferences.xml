            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_targeting_category"
        app:title="@string/hint_targeting">

        <SwitchPreferenceCompat
            app:key="@string/pref_mock_user_targeting_enabled"
            app:title="@string/hint_mock_user_targeting_enabled"
            app:defaultValue="@bool/pref_mock_user_targeting_enabled_def_val" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_iab_gpp_category"
        app:title="GPP (IAB Global Privacy Platform)">

        <EditTextPreference
            app:key="pref_iab_gpp_string"
            app:title="GPP String (IABGPP_HDR_GppString)"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="" />

        <EditTextPreference
            app:key="pref_iab_gpp_sid"
            app:title="GPP SID (IABGPP_GppSID)"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="" />

        <Preference
            app:key="pref_gpp_allow_all"
            app:title="Set GPP to Allow All" />

        <Preference
            app:key="pref_gpp_disallow_all"
            app:title="Set GPP to Disallow All" />
    </PreferenceCategory>

    <io.cloudx.demo.demoapp.LocationPermissionPreference
        app:key="pref_location_permission"
        app:title="@string/ask_location_permission" />
</PreferenceScreen>